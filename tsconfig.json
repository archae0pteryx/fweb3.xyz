{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "types": ["ethers", "jest"]
  },
  "include": [
    "next-env.d.ts",
    "components",
    "hooks",
    "lib",
    "pages",
    "jest",
    "types/networks.d.ts",
    "types/providers.d.ts",
    "scripts"
  ],
  "exclude": ["node_modules", "cypress/support/metamask/extension"]
}
